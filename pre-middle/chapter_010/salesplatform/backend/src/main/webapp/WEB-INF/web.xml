<web-app>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.job4j.filter.AuthFilter</filter-class>
        <load-on-startup>0</load-on-startup>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <!--<url-pattern>/dummy</url-pattern>-->
        <url-pattern>/postad</url-pattern>
        <url-pattern>/editad</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>ru.job4j.controller.RegisterController</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>ru.job4j.controller.LoginController</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>ru.job4j.controller.LogoutController</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListPostsController</servlet-name>
        <servlet-class>ru.job4j.controller.ListPostsController</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListPostsController</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PictureController</servlet-name>
        <servlet-class>ru.job4j.controller.PictureController</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>PictureController</servlet-name>
        <url-pattern>/pic</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddPostController</servlet-name>
        <servlet-class>ru.job4j.controller.AddPostController</servlet-class>
        <load-on-startup>0</load-on-startup>
        <multipart-config>
            <!--<location>/tmp</location>-->
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddPostController</servlet-name>
        <url-pattern>/postad</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditPostController</servlet-name>
        <servlet-class>ru.job4j.controller.EditPostController</servlet-class>
        <load-on-startup>0</load-on-startup>
        <multipart-config>
            <!--<location>/tmp</location>-->
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditPostController</servlet-name>
        <url-pattern>/editad</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MetadataController</servlet-name>
        <servlet-class>ru.job4j.controller.MetadataController</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>MetadataController</servlet-name>
        <url-pattern>/metadata</url-pattern>
    </servlet-mapping>
</web-app>