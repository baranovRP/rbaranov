<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.job4j.model.car.Car" table="CARS">
        <id name="id" type="java.lang.Long">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <many-to-one name="body" column="BODY_ID" lazy="false"
                     class="ru.job4j.model.car.parts.Body" not-null="true"/>

        <many-to-one name="category" column="CATEGORY_ID"
                     lazy="false" class="ru.job4j.model.car.parts.Category"
                     not-null="true"/>

        <many-to-one name="fuel" column="FUEL_ID" lazy="false"
                     class="ru.job4j.model.car.parts.Fuel" not-null="true"/>

        <many-to-one name="carModel" column="MODEL_ID" lazy="false"
                     class="ru.job4j.model.car.parts.CarModel"
                     not-null="true"/>

        <many-to-one name="transmission" column="TRANSMISSION_ID" lazy="false"
                     class="ru.job4j.model.car.parts.Transmission"
                     not-null="true"/>

        <property name="engineSize" column="ENGINE_SIZE"/>
        <property name="mileage" column="MILEAGE"/>
        <property name="year" column="YEAR"/>
    </class>
</hibernate-mapping>