<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.job4j.models.Post" table="POSTS">
        <id name="id" type="java.lang.Long">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="content" column="CONTENT"/>
        <property name="price" column="PRICE"/>
        <property name="isActive" column="IS_ACTIVE"/>
        <many-to-one name="car" column="CAR_ID" lazy="false"
                     class="ru.job4j.models.car.Car" not-null="true"/>
        <many-to-one name="user" column="USER_ID" lazy="false"
                     class="ru.job4j.models.User" not-null="true"/>
        <property name="publishDate" column="PUBLISH_DATE"/>
        <bag name="pictures" inverse="true" lazy="false">
            <key column="POST_ID" not-null="true"/>
            <one-to-many class="ru.job4j.models.Picture"/>
        </bag>
        <!--pictures list-->
    </class>
</hibernate-mapping>