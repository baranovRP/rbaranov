<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.job4j.models.Car" table="cars">
        <id name="id" type="java.lang.Long">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="manufacturer" column="manufacturer"/>
        <property name="model" column="model"/>
        <many-to-one name="transmission" column="transmission_id"
                     class="ru.job4j.models.Transmission" not-null="true"/>
        <many-to-one name="engine" column="engine_id"
                     class="ru.job4j.models.Engine" not-null="true"/>
        <many-to-one name="gearbox" column="gearbox_id"
                     class="ru.job4j.models.Gearbox" not-null="true"/>
        <property name="createDate" type="timestamp" update="false">
            <column name="create_date"/>
        </property>
    </class>
</hibernate-mapping>